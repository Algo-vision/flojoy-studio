{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "types": ["cypress", "node"],
    "paths": {
      "@src/*": ["src/*"],
      "@feature/*": ["src/feature/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "..",
    "rootDir": "..",
  },
  "include": ["**/*.ts"]
}