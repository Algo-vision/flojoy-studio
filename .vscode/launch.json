  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI debug",
      "type": "python",
      "justMyCode": false,
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "captain.main:app",
        "--reload",
        "--port",
        "5392",
        "--log-level",
        "debug"
      ],
      "env": {
        "DEBUG": "True",
        "FASTAPI_LOG": "debug"
      }
    },
    // {
    //   "name": "RQ Worker",
    //   "type": "python",
    //   "request": "attach",
    //   "justMyCode": false,
    //   "connect": {
    //     "host": "localhost",
    //     "port": 5678
    //   }
    // },
    // {
    //   "name": "RQ Watch",
    //   "type": "python",
    //   "request": "attach",
    //   "justMyCode": false,
    //   "connect": {
    //     "host": "localhost",
    //     "port": 5679
    //   }
    // }
    {
      "name": "Debug Main Process",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron-vite",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron-vite.cmd"
      },
      "runtimeArgs": ["--sourcemap"],
      "env": {
        "REMOTE_DEBUGGING_PORT": "9222"
      }
    },
    {
      "name": "Debug Renderer Process",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}/src/renderer",
      "timeout": 60000,
      "presentation": {
        "hidden": true
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug All",
      "configurations": ["Debug Main Process", "Debug Renderer Process"],
      "presentation": {
        "order": 1
      }
    }
  ]
}
